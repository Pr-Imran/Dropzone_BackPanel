@{
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div style="text-align:center; padding:50px;">
        <h1>Access Denied</h1>
        <p>You do not have permission to view this page.</p>
        <button onclick="window.location.href='@Url.Action("Login", "Account", new { area = "Auth" })'">Go to Login Page</button>
    </div>
</body>
</html>
